#include "AFMotor.h"
const int MOTOR_1 = 1; 
const int MOTOR_2 = 2; 
const int MOTOR_3 = 3; 
const int MOTOR_4 = 4; 

AF_DCMotor motor1(MOTOR_1, MOTOR12_64KHZ); // create motor object, 64KHz pwm
AF_DCMotor motor2(MOTOR_2, MOTOR12_64KHZ); // create motor object, 64KHz pwm
AF_DCMotor motor3(MOTOR_3, MOTOR12_64KHZ); // create motor object, 64KHz pwm
AF_DCMotor motor4(MOTOR_4, MOTOR12_64KHZ);

char value;


void setup(){
  Serial.begin(9600);
  motor1.setSpeed(110);          // set the motor speed to 0-255
  motor2.setSpeed(110);
  motor3.setSpeed(110);
  motor4.setSpeed(110);
  
  
}
void loop(){
  if(Serial.available()>0){
    value=Serial.read();
    Serial.println(value);
    Serial.print("\n");

    distance1=data();
    Serial.println(distance1);


    if(value=='1'){
  motor1.run(FORWARD); 
  motor2.run(FORWARD); 
  motor3.run(FORWARD); 
  motor4.run(FORWARD);// turn it on going forward

    }
    else if(value=='2'){
 motor1.run(BACKWARD);         // turn it on going forward
  motor2.run(BACKWARD); 
  motor3.run(BACKWARD); 
  motor4.run(BACKWARD);
    }
    else if(value=='3'){
  motor1.run(FORWARD);  // the other right
  motor2.run(FORWARD); 
  motor3.run(BACKWARD); 
  motor4.run(BACKWARD);
    }
   else if(value=='4'){
  motor1.run(BACKWARD);   // turn it on going left
  motor2.run(BACKWARD);
  motor3.run(FORWARD); 
  motor4.run(FORWARD); 
    }
     else if(value=='5'){
  motor1.run(RELEASE);   // stops it
  motor2.run(RELEASE);
  motor3.run(RELEASE); 
  motor4.run(RELEASE); 
    }
  }


  
}
